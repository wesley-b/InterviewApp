<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:background="#ff000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/welcomeText"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Select a question type below"
        android:id="@+id/selectText"
        android:nestedScrollingEnabled="false"
        android:maxWidth="120dp"
        android:gravity="right"
        android:layout_below="@+id/welcomeText"
        android:layout_alignEnd="@+id/welcomeText"
        android:textColor="#ffbebebe" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Behavioral Question"
        android:id="@+id/behaviorQButton"
        android:layout_below="@+id/selectText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="144dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Lightning Round"
        android:id="@+id/lightningRound"
        android:layout_below="@+id/behaviorQButton"
        android:layout_alignStart="@+id/behaviorQButton" />

    <!--<Button-->
        <!--android:layout_width="180dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Add Question"-->
        <!--android:id="@+id/addQuestionButton"-->
        <!--android:layout_below="@+id/lightningRound"-->
        <!--android:layout_alignStart="@+id/lightningRound" />-->
</RelativeLayout>
